<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context=".Maps" >

    <Button
        android:id="@+id/btnVicosa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:onClick="onClick_Vicosa"
        android:text="VIÃ‡OSA"
        android:layout_alignParentEnd="true" />

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="430dp"
        android:layout_below="@+id/btnVicosa"
        />

    <Button
        android:id="@+id/btnUFV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:onClick="onClick_UFV"
        android:text="UFV" />

    <Button
        android:id="@+id/btnPC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:onClick="onClick_PC"
        android:text="PC"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btnLocalizar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick_Localizar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Localizar"
        android:textAllCaps="false"
        android:layout_below="@+id/map"/>

</RelativeLayout>
